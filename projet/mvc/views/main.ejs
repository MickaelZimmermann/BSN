<!DOCTYPE html>
<html>

<head>
	<title>BSN</title>
	<style>
		body {
			margin: 0;
			padding: 0;
			display: grid;
			grid-template-columns: min-content 1fr;
			column-gap: 1rem;
		}

		h1 {
			text-align: center;
			grid-column: span 2;
		}

		nav {
			background-color: #494343;
			padding: 2em;
			height: fit-content;
		}

		nav ul {
			list-style: none;
			display: flex;
			flex-direction: column;
			gap: 2rem;
			margin: 0;
			padding: 0;
		}

		nav li a {
			color: white;
		}

		main pre {
			white-space: break-spaces;
			padding: 0 1rem;
		}
	</style>
</head>

<body>

	<h1>Best Social Network</h1>

	<%- include("nav.ejs") %>

	<main>
		<% if ( data.error ) { %>
			<%- include("error.ejs") %>
		<% } %>
		<% if ( data.json ) { %>
			<%- include("json.ejs") %>
		<% } %>
		<% if ( data.view ) { %>
			<%- include(data.view + ".ejs") %>
		<% } %>
	</main>

</body>

</html>